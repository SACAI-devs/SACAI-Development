<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <!-- ========================================================= -->
    <!-- ===============BEGINNING OF APP PERMISSIONS============== -->
    <!-- ========================================================= -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"> </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" > </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" > </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" > </uses-permission>
    <!--Storage Permissions for QR Code Generator-->
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE"> </uses-permission>
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:remove="android:maxSdkVersion"
        tools:ignore="ScopedStorage" > </uses-permission>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" > </uses-permission>

    <application
        android:requestLegacyExternalStorage="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SACAI"
        tools:targetApi="33" >
        <receiver
            android:name=".operator.OperatorBroadcastReceiver"
            android:enabled="true"
            android:exported="true" >
        </receiver>
        <receiver
            android:name=".commuter.CommGeofenceBroadcastReceiver"
            android:enabled="true"
            android:exported="true" >
        </receiver>

        <meta-data
            android:name="com.google.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />

        <!-- ========================================================= -->
        <!-- ======BEGINNING OF NON-USER SPECIFIC CONFIGURATIONS====== -->
        <!-- ========================================================= -->
        <!-- LANDING ACTIVITY -->
        <activity
            android:name=".LandingActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity> <!-- FORGOT PASSWORD -->
        <activity
            android:name=".ForgotPassActivity"
            android:exported="false"
            android:parentActivityName=".LandingActivity">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
<!--         MAPS API KEY -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />

        <!-- ========================================================= -->
        <!-- =========END OF NON-USER SPECIFIC CONFIGURATIONS========= -->
        <!-- ========================================================= -->
        <!-- ========================================================= -->
        <!-- ======BEGINNING OF OPERATOR SPECIFIC CONFIGURATIONS====== -->
        <!-- ========================================================= -->
        <!-- OPERATOR MAIN ACTIVITY -->
        <activity
            android:name=".operator.OperMainActivity"
            android:exported="false" /> <!-- OPERATOR SIGNUP -->
        <activity
            android:name=".operator.OperSignupActivity"
            android:exported="true">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".operator.OperSignup2Activity"
            android:exported="false" /> <!-- OPERATOR LOGIN -->
        <activity
            android:name=".operator.OperLoginActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".operator.OperUpdateEmailActivity"
            android:exported="false" />
        <activity
            android:name=".operator.OperUpdatePassword"
            android:exported="false" />
        <!-- ========================================================= -->
        <!-- ======BEGINNING OF COMMUTER SPECIFIC CONFIGURATIONS====== -->
        <!-- ========================================================= -->
        <activity
            android:name=".commuter.CommUpdatePassword"
            android:exported="false" />

        <!-- COMMUTER MAIN ACTIVITY -->
        <activity
            android:name=".commuter.CommMainActivity"
            android:exported="false" /> <!-- COMMUTER SIGNUP -->
        <activity
            android:name=".commuter.CommSignupActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".commuter.CommSignup2Activity"
            android:exported="false" /> <!-- COMMUTER LOGIN -->
        <activity
            android:name=".commuter.CommLoginActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".commuter.CommUpdateEmailActivity"
            android:exported="false" />
    </application>

</manifest>