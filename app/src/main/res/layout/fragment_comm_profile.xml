<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".commuter.fragments.CommProfileFrag" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--TOOLBAR -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/BasicToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/app_name"
            app:navigationIcon="@drawable/ic_back" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:background="@color/white">
            <!--FORM GROUP-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--FORM LABEL-->
                <TextView
                    style="@style/TitleTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/teal_100"
                    android:paddingVertical="20dp"
                    android:text="@string/label_editProfile" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:paddingHorizontal="40dp">

                    <ImageView
                        android:id="@+id/imageProfile"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginVertical="10dp"
                        android:src="@drawable/ic_commuter" />

                    <Button
                        android:id="@+id/btnUploadProfile"
                        style="@style/OutlineBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="40dp"
                        android:text="@string/label_change_profile_picture" />

                    <!--INPUT FIRST NAME-->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/BasicInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:hint="@string/hint_firstName">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etFirstname"
                            style="@style/InputTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <!-- INPUT LAST NAME -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/BasicInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:hint="@string/hint_lastName">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etLastname"
                            style="@style/InputTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <!--INPUT USERNAME -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/BasicInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:hint="@string/hint_userName">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etUsername"
                            style="@style/InputTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <!--INPUT EMAIL-->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/BlockedInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:hint="@string/hint_email">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etEmail"
                            style="@style/InputTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:inputType="textEmailAddress" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <!--INPUT HOME ADDRESS-->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/containerSetHomeAddress"
                        style="@style/AutoCompleteDropDown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_homeAddress"
                        android:textColorHint="@color/grey">

                        <AutoCompleteTextView
                            android:id="@+id/etHomeAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:textColor="@color/black" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!--INPUT WORK ADDRESS-->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/containerSetDestinationAddress"
                        style="@style/AutoCompleteDropDown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_workAddress"
                        android:textColorHint="@color/grey">

                        <AutoCompleteTextView
                            android:id="@+id/etWorkAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:textColor="@color/black" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!--NEEDS ASSESSMENT-->
                    <TextView
                        style="@style/SubheadingTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="@string/label_needs" />
                    <!--MOBILITY IMPAIRMENT-->
                    <CheckBox
                        android:id="@+id/cbMobility"
                        style="@style/Checkbox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="12dp"
                        android:text="@string/label_mobility" />
                    <!--AUDITORY IMPAIRMENT-->
                    <CheckBox
                        android:id="@+id/cbAuditory"
                        style="@style/Checkbox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="12dp"
                        android:text="@string/label_auditory" />
                    <!--WHEELCHAIR NEED-->
                    <CheckBox
                        android:id="@+id/cbWheelchair"
                        style="@style/Checkbox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="12dp"
                        android:text="@string/label_wheelchair" />


                    <!--UPLOAD PWD ID PHOTO-->
                    <ImageView
                        android:id="@+id/imageId"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:src="@android:drawable/ic_menu_gallery" />

                    <Button
                        android:id="@+id/btnUploadId"
                        style="@style/OutlineBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="30dp"
                        android:text="@string/label_upload_id" />

                    <!--UPDATE PASSWORD BUTTON-->

                    <!--UPDATE EMAIL BUTTON-->
                    <Button
                        android:id="@+id/btnUpdatePass"
                        style="@style/OutlineBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:text="@string/label_update_password" />

                    <Button
                        android:id="@+id/btnUpdateEmail"
                        style="@style/OutlineBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:text="@string/label_update_email" />
                    <!--SAVE BUTTON-->
                    <Button
                        android:id="@+id/btnSave"
                        style="@style/PrimaryBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginBottom="30dp"
                        android:text="@string/label_save" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>