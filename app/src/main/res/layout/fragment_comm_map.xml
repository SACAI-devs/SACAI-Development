<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".commuter.fragments.CommMapFrag"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ochre_100">

        <com.google.android.gms.maps.MapView
            android:id="@+id/commuter_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/desc_map" />

        <!--ROUTE SELECTION MENU-->
        <androidx.cardview.widget.CardView
            style="@style/RoundedCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical"
                android:background="@color/teal_100">
                <!-- INPUT ORIGIN -->


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/containerSelectOrigin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_location"
                    android:textColorHint="@color/grey"
                    style="@style/AutoCompleteDropDown" >
                    <AutoCompleteTextView
                        android:id="@+id/etPickup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <!--INPUT LOCATION-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/containerSelectDestination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_destination"
                    android:textColorHint="@color/grey"
                    style="@style/AutoCompleteDropDown" >
                    <AutoCompleteTextView
                        android:id="@+id/etDropoff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- SET DESTINATION TO SAVED LOCATIONS -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    >
                    <!-- SET HOME -->
                    <Button
                        android:id="@+id/btnSetHome"
                        style="@style/PrimaryBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginHorizontal="5dp"
                        android:textSize="12dp"
                        android:text="@string/label_home"/>
                    <!--SET WORK-->
                    <Button
                        android:id="@+id/btnSetWork"
                        style="@style/PrimaryBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginTop="2dp"
                        android:textSize="12dp"
                        android:text="@string/label_work"/>
                </LinearLayout>

                <!--PARA SASAKAY BUTTON-->
                <Button
                    android:id="@+id/btnSetRoute"
                    style="@style/PrimaryBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_PARA_SASAKAY"/>

                <Button
                    android:id="@+id/btnCancelPara"
                    style="@style/PrimaryBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/label_cancel_para" />

                <Button
                    android:id="@+id/btnParaBababa"
                    style="@style/PrimaryBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/label_para_bababa" />

                <Button
                    android:id="@+id/btnScanQr"
                    style="@style/PrimaryBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_scan_qr"/>

                <!--SUCCESS BUTTON-->
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <!--MAP CONTAINER-->
    </RelativeLayout>
</FrameLayout>