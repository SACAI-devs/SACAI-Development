<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".commuter.fragments.CommMapFrag">




    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ochre_100">
        <!--    ROUTE SELECTION MENU -->
        <androidx.cardview.widget.CardView
            style="@style/RoundedCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:orientation="vertical"
                android:background="@color/teal_100">
                <!-- INPUT DESTINATION -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_location"
                    android:textColorHint="@color/grey"
                    style="@style/AutoCompleteDropDown"
                    >
                    <AutoCompleteTextView
                        android:id="@+id/etPickup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <!-- INPUT LOCATION -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="@string/hint_destination"
                    android:textColorHint="@color/grey"
                    style="@style/AutoCompleteDropDown"
                    >
                    <AutoCompleteTextView
                        android:id="@+id/etDropoff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/etTest"/>
                <!-- BUTTON SELECT ROUTE -->
                <Button
                    android:id="@+id/btnSetRoute"
                    style="@style/PrimaryBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/label_goNow"/>

                <!-- BUTTON TEMPORARY DISEMARBKED SUCCESSFULLY -->
                <Button
                    android:id="@+id/btnDisembarked"
                    style="@style/PrimaryBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/label_disembarked"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <!--        MAP CONTAINER-->
        <com.google.android.gms.maps.MapView
            android:id="@+id/commuter_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
</FrameLayout>