<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" >
    <androidx.cardview.widget.CardView
        style="@style/RoundedCard"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/ochre_100"
            android:padding="20dp"
            android:orientation="horizontal" >
            <!--COMMUTER IMAGE PLACEHOLDER-->
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_commuter"
                android:contentDescription="@string/desc_profilePic" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginHorizontal="20dp" >
                <!--USERNAME PLACEHOLDER-->
                <TextView
                    android:id="@+id/tvUsername"
                    style="@style/BodyTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="jdelacruz" />
                <!--NEEDS LIST-->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerNeeds"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
                <!--SOURCE PLACEHOLDER-->
                <TextView
                    android:id="@+id/tvSource"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:drawableLeft="@drawable/ic_source"
                    android:drawablePadding="5dp"
                    android:text="Source" />
                <!--DESTINATION PLACEHOLDER-->
                <TextView
                    android:id="@+id/tvDestination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:drawableLeft="@drawable/ic_destination"
                    android:drawablePadding="5dp"
                    android:text="Destination" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>