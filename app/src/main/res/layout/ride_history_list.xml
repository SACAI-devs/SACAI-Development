<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <androidx.cardview.widget.CardView
        style="@style/RoundedCard"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="14dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/ochre_100"
            android:padding="20dp"
            android:orientation="vertical" >
            <!--PLATE NUMBER PLACEHOLDER-->
            <TextView
                android:id="@+id/tvPlateNumber"
                style="@style/EmphasizedTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="@string/label_placeholder" />
            <!--DATE OF TRIP PLACEHOLDER-->
            <TextView
                android:id="@+id/tvDate"
                style="@style/CaptionTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="" />
            <!--SOURCE PLACEHOLDER-->
            <TextView
                android:id="@+id/tvOrigin"
                style="@style/BodyTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:drawableLeft="@drawable/ic_source"
                android:drawablePadding="5dp"
                android:text="Source" />
            <!--DESTINATION PLACEHOLDER-->
            <TextView
                android:id="@+id/tvDestination"
                style="@style/BodyTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:drawableLeft="@drawable/ic_destination"
                android:drawablePadding="5dp"
                android:text="Destination" />
            <!--START TIME PLACEHOLDER-->
            <TextView
                android:id="@+id/tvTimeStart"
                style="@style/CaptionTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
            <!--END TIME PLACEHOLDER-->
            <TextView
                android:id="@+id/tvTimeEnd"
                style="@style/CaptionTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
            <!--TRIP ID PLACEHOLDER-->
            <TextView
                android:id="@+id/tvTripId"
                style="@style/CaptionTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>