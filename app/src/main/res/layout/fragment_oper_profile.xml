<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.OperProfileFrag">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Profile Fragment" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--    TOOLBAR     -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/BasicToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/app_name"
            app:navigationIcon="@drawable/ic_back"  />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- FORM GROUP-->
                <TextView
                    style="@style/TitleTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/teal_100"
                    android:paddingVertical="20dp"
                    android:text="@string/label_editProfile" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingHorizontal="40dp"
                    android:orientation="vertical">
                    <!-- INPUT DRIVER NAME -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/BasicInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:hint="@string/hint_driverName"
                        android:textColorHint="@color/grey"
                        >
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDriverName"
                            style="@style/InputTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- INPUT CONDUCTOR NAME -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/BasicInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:hint="@string/hint_conductorName"
                        android:textColorHint="@color/grey"
                        >
                        <com.google.android.material.textfield.TextInputEditText
                            style="@style/InputTxt"
                            android:id="@+id/etConductorName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- INPUT USERNAME -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/BasicInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:hint="@string/hint_userName"
                        android:textColorHint="@color/grey"
                        >
                        <com.google.android.material.textfield.TextInputEditText
                            style="@style/InputTxt"
                            android:id="@+id/etUsername"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- INPUT EMAIL -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/BasicInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:hint="@string/hint_email"
                        android:textColorHint="@color/grey"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etEmail"
                            style="@style/InputTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!--    NEEDS ASSESSMENT-->
                    <TextView
                        style="@style/SubheadingTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="@string/label_wheelchairCapacity" />

                    <!--    WHEELCHAIR NEED-->
                    <CheckBox
                        style="@style/Checkbox"
                        android:id="@+id/cbWheelchair"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="12dp"
                        android:text="@string/label_wheelchair"
                        android:clickable="false"
                        />

                    <!-- BUTTON SAVE CHANGES -->
                    <Button
                        style="@style/PrimaryBtn"
                        android:id="@+id/btnSave"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="30dp"
                        android:layout_marginHorizontal="60dp"
                        android:text="@string/label_save" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>