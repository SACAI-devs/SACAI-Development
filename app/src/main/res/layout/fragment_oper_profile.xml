<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.OperProfileFrag">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Profile Fragment" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- FORM GROUP-->
            <TextView
                style="@style/TitleTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/teal_100"
                android:paddingTop="60dp"
                android:paddingBottom="10dp"
                android:text="@string/label_editProfile" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="40dp"
                android:orientation="vertical">
                <!-- INPUT DRIVER NAME -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/BasicInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp" >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etDriverName"
                        style="@style/InputTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_driverName" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- INPUT CONDUCTOR NAME -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/BasicInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp" >
                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/InputTxt"
                        android:id="@+id/etConductorName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_conductorName" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- INPUT USERNAME -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/BasicInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp" >
                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/InputTxt"
                        android:id="@+id/etUsername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_userName" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- INPUT EMAIL -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/BasicInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp" >
                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/InputTxt"
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_email"
                        android:inputType="textEmailAddress"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <!--    NEEDS ASSESSMENT-->
                <TextView
                    style="@style/SubheadingTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="@string/label_wheelchairCapacity" />

                <!--    WHEELCHAIR NEED-->
                <CheckBox
                    style="@style/Checkbox"
                    android:id="@+id/cbWheelchair"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:text="@string/label_wheelchair"
                    android:clickable="false"
                    />

                <!-- BUTTON SAVE CHANGES -->
                <Button
                    style="@style/PrimaryBtn"
                    android:id="@+id/btnSave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginHorizontal="60dp"
                    android:text="@string/label_save" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>