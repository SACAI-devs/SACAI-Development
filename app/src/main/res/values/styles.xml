<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SpecialTitleTxt" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/staatliches</item>
        <item name="android:textSize">82sp</item>
        <item name="android:textColor">@color/teal_700</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="TitleTxt" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/staatliches</item>
        <item name="android:textSize">64sp</item>
        <item name="lineHeight">60sp</item>
        <item name="android:textColor">@color/teal_700</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="DarkTitleTxt" parent="TitleTxt">
        <item name="android:textColor">@color/ochre_100</item>
    </style>

    <style name="SubheadingTxt" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/dmsans_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/teal</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="DarkSubheadingTxt" parent="SubheadingTxt">
        <item name="android:textColor">@color/ochre_100</item>
    </style>

    <style name="BodyTxt" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/dmsans_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DarkBodyTxt" parent="BodyTxt">
        <item name="android:textColor">@color/ochre_100</item>
    </style>

    <style name="PrimaryBtn" parent="Widget.Material3.Button">
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/true_white</item>
        <item name="android:backgroundTint">@color/teal</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="OutlineBtn" parent="Widget.Material3.Button">
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/teal_700</item>
        <item name="android:strokeColor">@color/teal_700</item>
        <item name="android:backgroundTint">@color/ochre_200</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextBtn" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/teal_700</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DarkTextBtn" parent="TextBtn">
        <item name="android:textColor">@color/ochre_100</item>
    </style>

    <style name="BasicInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/grey</item>
        <item name="boxStrokeErrorColor">@color/error</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
    </style>

    <style name="InputTxt">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Checkbox">
        <item name="buttonTint">@color/grey</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DarkCheckbox" parent="Checkbox">
        <item name="buttonTint">@color/ochre_100</item>
        <item name="android:textColor">@color/ochre_100</item>
    </style>

    <style name="BasicToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/teal</item>
        <item name="titleTextColor">@color/ochre_100</item>
        <item name="elevation">5dp</item>
        <item name="navigationIconTint">@color/ochre_100</item>
    </style>

    <style name="AutoCompleteDropDown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu" >
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/grey</item>
        <item name="boxStrokeErrorColor">@color/error</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
    </style>

</resources>